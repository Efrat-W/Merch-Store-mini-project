<Page x:Class="PL.OrderProcess.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.OrderProcess"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="Cart">

    <Grid Background="White">
        
        <Rectangle Height="50" Stroke="Black" Fill="Black" Margin="0,500,0,0"/>
        <ListView ItemsSource="{Binding Path=Items}" Height="500" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image />
                        <Label Style="{StaticResource BlackLabel}"  Content="{Binding Path=Name}" FontFamily="{StaticResource JosefinSansMedium}"/>
                        <Label Style="{StaticResource BlackLabel}"  Content="{Binding Path=Amount}"/>
                        <Label Style="{StaticResource BlackLabel}"  Content="{Binding Path=TotalPrice}"/>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>
</Page>
